<h1>Profiles</h1>

<table>
  <thead>
    <tr>
      <th>Profile ID</th>
      <th>Name</th>
      <th>Gender</th>
      <th>ID No.</th>
      <th>ID Type</th>
      <th>Occupation</th>
      <th>Employer</th>
      <th>Position</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |t| %>
      <tr>
        <td><%= t.profile_id %></td>
        <td><%= t.name %></td>
        <td><%= t.gender %></td>
        <td><%= t.id_number %></td>
        <td><%= t.id_type %></td>
        <td><%= t.occupation %></td>
        <td><%= t.employer %></td>
        <td><%= t.position %></td>
        <td><%= t.country %> <%= t.province %> <%= t.city %></td>
      </tr>
    <% end %>
  </tbody>
</table>